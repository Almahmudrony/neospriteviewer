{
    "include": ["./src/**/*"],
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "target": "esnext",
        "module": "commonjs",
        "lib": ["dom", "es2015", "es2017"],
        "allowJs": false,
        "jsx": "react",
        "strict": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noEmit": true,
        "skipLibCheck": true,
        "paths": {
            "*": ["node_modules/*", "src/types/*"]
        }
    }
}
